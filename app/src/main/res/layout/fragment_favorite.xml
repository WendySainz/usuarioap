<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteFragment">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="#242424"
                android:text="Favoritos" />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!--Contenido favoritos-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title_bar">


                <!-- BLOQUE 1   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/imagen"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/casa2"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nombre_propiedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre locación"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imagen"/>

                <TextView
                    android:id="@+id/estatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre_propiedad"
                    android:text="En venta"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/imagen"/>

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/estatus"
                    android:text="$2,000,000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imagen"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_below="@id/estatus"
                    android:layout_toRightOf="@id/precio"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>


                <!-- BLOQUE 2   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/imagen2"
                    android:layout_below="@id/imagen"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/casa3"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nombre_propiedad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre locación"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@id/imagen"
                    android:layout_toRightOf="@id/imagen2"/>

                <TextView
                    android:id="@+id/estatus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre_propiedad2"
                    android:text="En renta"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/imagen2"/>

                <TextView
                    android:id="@+id/precio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/estatus2"
                    android:text="$2,000,000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imagen2"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_below="@id/estatus2"
                    android:layout_toRightOf="@id/precio2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/imagen3"
                    android:layout_below="@id/imagen2"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/casa2"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nombre_propiedad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre locación"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@id/imagen2"
                    android:layout_toRightOf="@id/imagen3"/>

                <TextView
                    android:id="@+id/estatus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre_propiedad3"
                    android:text="En venta"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/imagen3"/>

                <TextView
                    android:id="@+id/precio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/estatus3"
                    android:text="$2,000,000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imagen3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_below="@id/estatus3"
                    android:layout_toRightOf="@id/precio3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>


                <!--PRUEBA SCROLL-->

                <ImageView
                    android:id="@+id/imagen4"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/imagen3"
                    android:src="@drawable/casa3"/>

                <ImageView
                    android:id="@+id/imagen5"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/imagen4"
                    android:src="@drawable/casa2"/>

                <ImageView
                    android:id="@+id/imagen6"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/imagen5"
                    android:src="@drawable/casa3"/>

            </RelativeLayout>


        </LinearLayout>



    </ScrollView>


</RelativeLayout>